<h1>イベント作成</h1>

<%= form_with model: @event do |f| %>
  <div class="form-group">
    <label for="eventFormTextField1">イベントタイトル</label>
    <%= f.text_field :title, class: "form-control"%>
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea２">イベント詳細</label>
    <%= f.text_area :details, class: "form-control",rows: "3"%>
  </div>
  <div class="form-group">
    <label for="eventFormTextField2">集合場所</label>
    <%= f.text_field :place, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
  </div>
  <div class="row">
      <div class="col-sm-6">
          <div class="form-group">
              <div class="input-group date" id="datetimepicker1" data-target-input="nearest">
                  <%= f.text_field :start_time, class: "form-control datetimepicker-input", id: "start_time", data: {toggle: "datetimepicker", target: "#start_time"} %>
                  <div class="input-group-append" data-target="#start_time" data-toggle="datetimepicker">
                      <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                  </div>
              </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#datetimepicker1').datetimepicker();
          });
      </script>
  </div>
  <%= f.submit "イベントを作成する", class: "btn btn-primary" %>
<% end %>
